<div class="card my-4">
    <div class="card-body">
        <p>
            <h2>{{position}}</h2>
            <div>{{company_name}}</div>
            <a href="{{link}}">{{link}}</a>
            <hr />
            <h5>
                ${{salary}} / yr - {{modality_string}}
            </h5>
        </p>
        <p>{{body}}</p>
        <div class="my-2">
            Posted by 
            <a href="/profile/{{username}}" style="text-decoration: none;">
                {{username}} 
            </a>
            <br \>
            <span class="small">{{time_posted}}</span>
        </div> 
        <div>
            <a href="/view_post/{{post_id}}" class="btn btn-primary">View Comments</a>
            <span class="mx-2"></span>
            <button class="btn btn-primary">👎</button>
            <span class="btn btn-primary" style="cursor: unset;">{{points}}</span>
            <button href="/" class="btn btn-primary">👍</button>
        </div>
	    {{#ifEquals @root.session.user.username username}}
	    <button 
	    	class="btn btn-danger" 
	    	style="position:absolute; top:0; right:0; margin:10px; padding:5px;" 
	    	onclick="deletePost({{post_id}})"
	    >🗑️
	    </button>
	    {{/ifEquals}}
    </div>
</div>